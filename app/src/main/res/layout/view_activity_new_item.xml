<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical"
      >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="134dp"
            android:background="@color/white"

            >

            <ImageView
                android:layout_marginTop="@dimen/tenDp"
                android:layout_marginLeft="@dimen/tenDp"
                android:layout_marginRight="@dimen/tenDp"
                android:id="@+id/activity_item_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/default_error_long" />

            <ImageView
                android:visibility="visible"
                android:id="@+id/activity_item_status"
                android:layout_width="@dimen/fourtyDp"
                android:layout_height="@dimen/fourtyDp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop" />

        </RelativeLayout>

        <LinearLayout
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingRight="@dimen/tenDp"
            android:paddingLeft="@dimen/tenDp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <TextView
                android:drawablePadding="@dimen/fiveDp"
                android:drawableLeft="@drawable/view_time_activity"
                android:id="@+id/activity_item_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="报名截止日期"
                android:textColor="#666666"
                android:textSize="16sp" />
            <TextView
                android:drawablePadding="@dimen/fiveDp"
                android:drawableLeft="@drawable/activity_address_view"
                android:layout_marginTop="@dimen/tenDp"
                android:id="@+id/activity_item_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="活动地址"
                android:textColor="#666666"
                android:textSize="16sp" />

        </LinearLayout>
        <View
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_size"
            android:background="@color/linecolor"/>
    </LinearLayout>


</LinearLayout>