<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:weightSum="4"
    android:background="@color/white"
    android:layout_marginLeft="@dimen/twelvetyDp"
    android:layout_marginRight="@dimen/twelvetyDp"
    android:layout_height="110dp"
    android:orientation="horizontal">
    <RelativeLayout
        android:layout_weight="3"
        android:layout_width="0dp"
        android:layout_height="110dp" >

        <TextView
            android:id="@+id/adapter_content_item"
            android:textColor="#47464c"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:text="内容"
            android:maxLines="3"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/adapter_time_item"
            android:layout_marginBottom="20dp"
            android:layout_alignParentBottom="true"
            android:textColor="#98979c"
            android:textSize="9sp"
            android:text="时间"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        </RelativeLayout>
<LinearLayout
    android:layout_weight="1"
    android:layout_width="0dp"
    android:layout_gravity="center"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/adapter_point_item"
        android:text="积分"
        android:textColor="#fd8e32"
        android:textSize="22sp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>

</LinearLayout>