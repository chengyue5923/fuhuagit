<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="153dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="21dp">

        <com.fhzc.app.android.android.ui.view.widget.RoundImageView
            android:id="@+id/roundImage"
            android:layout_width="280dp"

            android:layout_height="153dp"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/activity_item_status"
            android:layout_width="@dimen/fifityDp"
            android:layout_height="@dimen/fifityDp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="9dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="13dp">

        <TextView
            android:id="@+id/activity_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#47464c"
            android:textSize="15sp"
            android:drawableRight="@drawable/selected_activitytitle"
            android:drawablePadding="5dp"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        >


        <TextView
            android:id="@+id/activity_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:drawableLeft="@drawable/activity_no_time_view"
            android:drawablePadding="@dimen/fiveDp"
            android:paddingLeft="5dp"
            android:text=""
            android:textColor="#a3a2a8"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        >


        <TextView
            android:id="@+id/activity_item_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:drawableLeft="@drawable/activity_address_view"
            android:drawablePadding="@dimen/fiveDp"
            android:paddingLeft="5dp"
            android:text=""
            android:textColor="#a3a2a8"
            android:textSize="14sp" />
    </LinearLayout>


</LinearLayout>