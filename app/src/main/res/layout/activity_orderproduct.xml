<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efeef4"
    android:orientation="vertical">

    <com.fhzc.app.android.android.ui.view.widget.CommonToolBar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#2a80f7"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_abbreviation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#ffffff"
            android:textSize="17sp"
            android:layout_marginLeft="12dp"
            android:lines="1"
            android:layout_marginTop="20dp"
            />

        <LinearLayout
            android:id="@+id/ll_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="20dp"
            >
            <TextView
                android:id="@+id/tv_annualyield"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=""
                android:textColor="#92c8ff"
                android:textSize="13sp"
                android:lines="1"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/tv_qitoujine"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=""
                android:textColor="#92c8ff"
                android:textSize="13sp"
                android:lines="1"
                />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/white"

        >
        <TextView
            android:layout_marginLeft="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预约金额"
            android:textColor="#464648"
            android:textSize="15sp"
            android:layout_gravity="center_vertical"
            />
        <EditText
            android:id="@+id/inputNUmberText"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text=""
            android:hint="100万起购"
            android:textColor="#99989d"
            android:layout_marginLeft="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="12dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="万元"
            android:textColor="#464648"
            android:textSize="15sp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="12dp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_order"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/bg_signupactivity2"
        android:text="预约产品"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="17sp"
        android:layout_marginTop="60dp"
        />

</LinearLayout>