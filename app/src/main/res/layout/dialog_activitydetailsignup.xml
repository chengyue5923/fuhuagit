<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/fifty_fiveDp"
        android:background="@color/appColorBlue"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_forme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:text="为自己报名"
            android:textColor="@color/white"
            android:textSize="@dimen/sixteenDp" />

        <TextView
            android:id="@+id/tv_forothers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/sure_signedup_forothers_detail"
            android:textColor="@color/white"
            android:textSize="@dimen/sixteenDp" />

        <ImageView
            android:id="@+id/delteImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/fiveteenDp"
            android:background="@drawable/deleteicon"
            android:padding="@dimen/tenDp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_forme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/fifty_fiveDp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/sixteenDp"
                android:text="活动报名："
                android:textColor="@color/titleTextColor"
                android:textSize="@dimen/foureenSp" />

            <TextView
                android:id="@+id/nameTextViews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/tenDp"
                android:text="推荐激情欧洲杯观战活动"
                android:textColor="@color/titleTextColor"
                android:textSize="@dimen/foureenSp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_size"
            android:background="@color/linecolor"></View>
        <LinearLayout
            android:visibility="gone"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fifty_fiveDp">
            <TextView
                android:layout_marginLeft="@dimen/sixteenDp"
                android:text="用户要求："
                android:textColor="@color/titleTextColor"
                android:textSize="@dimen/foureenSp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/numberText"
                android:layout_marginLeft="@dimen/tenDp"
                android:text="3级及以上用户"
                android:textColor="@color/titleTextColor"
                android:textSize="@dimen/foureenSp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_size"
            android:background="@color/linecolor"
            android:visibility="gone"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/fifty_fiveDp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/sixteenDp"
                android:text="报名人数："
                android:textColor="@color/titleTextColor"
                android:textSize="@dimen/foureenSp" />

            <LinearLayout
                android:id="@+id/plusAddLayout"
                android:layout_width="@dimen/fifty_fiveDp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/lay_account_bt"
                android:gravity="center">

                <ImageView
                    android:id="@+id/plusButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/plusbtn"
                    android:padding="@dimen/fiveteenDp" />
            </LinearLayout>

            <TextView
                android:id="@+id/numberEditTexts"
                android:layout_width="@dimen/seventysevenDp"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/plusAddLayout"
                android:background="@drawable/activity_number_edittext"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/titleTextColor"
                android:textSize="@dimen/seventeenSp" />

            <LinearLayout
                android:id="@+id/reducelayout"
                android:layout_width="@dimen/fifty_fiveDp"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/numberEditTexts"
                android:background="@drawable/lay_account_bt"
                android:gravity="center">

                <ImageView
                    android:id="@+id/reduceButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/reducebtn" />
            </LinearLayout>


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_size"
            android:background="@color/linecolor"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/Eightyfive"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/sureButton"
                    android:layout_width="@dimen/onehundfiftytyDp"
                    android:layout_height="@dimen/fourtyfourDp"
                    android:background="@drawable/activity_sure_bg"
                    android:gravity="center"
                    android:text="确认报名"
                    android:textColor="@color/white"
                    android:textSize="@dimen/foureenSp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_forother"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/fifty_fiveDp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/sixteenDp"
                android:text="预约客户姓名"
                android:textColor="@color/titleTextColor"
                android:textSize="@dimen/foureenSp" />

            <EditText
                android:id="@+id/nameForOtherEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/twentyeightdp"
                android:layout_marginRight="@dimen/sixteenDp"
                android:background="@null"
                android:hint="输入对方姓名"
                android:textColor="@color/titleTextColor"
                android:textColorHint="@color/texthintColor"
                android:textSize="@dimen/foureenSp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_size"
            android:background="@color/linecolor"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/fifty_fiveDp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/sixteenDp"
                android:text="预约手机号码"
                android:textColor="@color/titleTextColor"
                android:textSize="@dimen/foureenSp" />

            <EditText
                android:id="@+id/phoneForOtherEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/twentyeightdp"
                android:layout_marginRight="@dimen/sixteenDp"
                android:background="@null"
                android:hint="输入对方手机号"
                android:inputType="number"
                android:textColor="@color/titleTextColor"
                android:textColorHint="@color/texthintColor"
                android:textSize="@dimen/foureenSp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_size"
            android:background="@color/linecolor"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/fifty_fiveDp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/sixteenDp"
                android:text="输入参加人数"
                android:textColor="@color/titleTextColor"
                android:textSize="@dimen/foureenSp" />

            <EditText
                android:id="@+id/numberForOtherEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/twentyeightdp"
                android:layout_marginRight="@dimen/sixteenDp"
                android:background="@null"
                android:hint="输入有几人参加活动"
                android:textColor="@color/titleTextColor"
                android:textColorHint="@color/texthintColor"
                android:textSize="@dimen/foureenSp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_size"
            android:background="@color/linecolor"></View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/fifty_fiveDp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/codeViews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/sixteenDp"
                android:text="验      证      码"
                android:textColor="@color/titleTextColor"
                android:textSize="@dimen/foureenSp" />

            <com.fhzc.app.android.android.ui.view.widget.CountDownTimeButton
                android:id="@+id/countPassText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="@dimen/sevenDp"
                android:layout_marginRight="@dimen/fiveDp"
                android:layout_marginTop="@dimen/sevenDp"

                android:gravity="center"
                android:paddingBottom="@dimen/fiveDp"
                android:paddingLeft="@dimen/fiveDp"
                android:paddingRight="@dimen/fiveDp"
                android:paddingTop="@dimen/fiveDp"
                android:text="发送验证码"
                android:textColor="@color/appColorBlue"
                android:textSize="@dimen/elevenDp" />

            <EditText
                android:id="@+id/codeForOtherEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/twentyeightdp"
                android:layout_marginRight="@dimen/sixteenDp"
                android:layout_toLeftOf="@id/countPassText"
                android:layout_toRightOf="@id/codeViews"
                android:background="@null"
                android:hint="请输入验证码"
                android:textColor="@color/titleTextColor"
                android:textColorHint="@color/texthintColor"
                android:textSize="@dimen/foureenSp" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/tenDp"
            android:background="@color/linecolor"></View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/Eightyfive"
            android:gravity="center">

            <TextView
                android:id="@+id/sureforOtherButton"
                android:layout_width="@dimen/onehundfiftytyDp"
                android:layout_height="@dimen/fourtyfourDp"
                android:background="@drawable/activity_sure_bg"
                android:gravity="center"
                android:text="确认报名"
                android:textColor="@color/white"
                android:textSize="@dimen/foureenSp" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>