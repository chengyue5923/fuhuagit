<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efeef4"
    >
    <com.fhzc.app.android.android.ui.view.widget.CommonToolBar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mToolBar_title = "热门产品"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolBar"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/hp_title"
                android:scaleType="fitXY"
                android:layout_marginBottom="13dp"
                />

            <ImageView
                android:id="@+id/iv_lydc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="7dp"
                android:src="@drawable/hp_lydc"
                android:scaleType="fitXY"
                />
            <ImageView
                android:id="@+id/iv_hwtz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="7dp"
                android:src="@drawable/hp_hwtz"
                android:scaleType="fitXY"
                />
            <ImageView
                android:id="@+id/iv_qytz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="7dp"
                android:src="@drawable/hp_qytz"
                android:scaleType="fitXY"
                />
            <ImageView
                android:id="@+id/iv_lltz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="90dp"
                android:src="@drawable/hp_lltz"
                android:scaleType="fitXY"
                />
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        >
        <LinearLayout
            android:id="@+id/ll_collection"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#fff"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableRight="@drawable/hp_collect"
                android:paddingRight="5dp"
                android:gravity="end"
                />
            <TextView
                android:id="@+id/tv_collect"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="我的关注"
                android:textColor="#157efb"
                android:textSize="15sp"
                android:gravity="center_vertical"

                android:layout_weight="2"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_reservation"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="#157efb"
            >
            <TextView
                android:id="@+id/tv_reserve"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="我预约的产品"
                android:textColor="#fff"
                android:textSize="15sp"
                android:gravity="center_vertical|end"
                android:layout_weight="2"
                android:paddingRight="20dp"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableLeft="@drawable/hp_rightarrow"
                android:gravity="end"
                />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>