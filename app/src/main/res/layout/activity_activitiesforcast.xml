<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.fhzc.app.android.android.ui.view.widget.CommonToolBar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="@null"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#eeeef3"
            >
            <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/af_bg"
                android:scaleType="fitXY"
            />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                >
                <ImageView
                    android:id="@+id/iv_tzzjy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/af_tzzjy1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:scaleType="fitXY"
                    />

                <ImageView
                    android:id="@+id/iv_jkys"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/af_jkys2"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:scaleType="fitXY"
                    />

                <ImageView
                    android:id="@+id/iv_gdpj"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/af_gdpj3"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:scaleType="fitXY"
                    />
                <ImageView
                    android:id="@+id/iv_qzjy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/af_qzjy4"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:scaleType="fitXY"
                    />
                <ImageView
                    android:id="@+id/iv_tyjj"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/af_tyjj5"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:scaleType="fitXY"
                    />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>