<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical"
       >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="@color/white"

            >

            <ImageView
                android:layout_marginTop="@dimen/tenDp"
                android:layout_marginRight="@dimen/tenDp"
                android:layout_marginLeft="@dimen/tenDp"
                android:id="@+id/activity_item_image"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:scaleType="centerCrop"
                android:src="@drawable/default_error_long" />

            <ImageView
                android:visibility="visible"
                android:id="@+id/activity_item_status"
                android:layout_width="@dimen/fifityDp"
                android:layout_height="@dimen/fifityDp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop" />
            <TextView
                android:id="@+id/timeTextView"
                android:text="报名截止日期：时间暂无"
                android:drawablePadding="@dimen/fiveDp"
                android:layout_marginTop="@dimen/fiveteenDp"
                android:layout_marginLeft="@dimen/tenDp"
                android:layout_below="@id/activity_item_image"
                android:drawableLeft="@drawable/activity_no_time_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/addressTextView"
                android:text=""
                android:drawablePadding="@dimen/fiveDp"
                android:layout_marginTop="@dimen/fiveteenDp"
                android:layout_marginLeft="@dimen/tenDp"
                android:layout_below="@id/timeTextView"
                android:drawableLeft="@drawable/activity_address_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="#cc000000"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp">

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/knock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/activity_item_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:textSize="14sp"
                    android:text=""
                    android:textColor="@color/white" />
            </LinearLayout>
            <CheckBox
                android:layout_centerVertical="true"
                android:id="@+id/activityCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:button="@drawable/collect_checkbox_selector"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/activity_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="推荐激情欧洲杯观战活动"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/activity_item_detail"
                android:layout_width="90dp"
                android:text="查看详情"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/activity_detail_button_bg"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="14sp" />
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>