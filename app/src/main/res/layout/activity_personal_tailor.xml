<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
     <com.fhzc.app.android.android.ui.view.widget.ScrollViewExtend
        android:id="@+id/scrollLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:adjustViewBounds="true"
                    android:background="@drawable/right_person_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <RelativeLayout
                    android:visibility="visible"
                    android:id="@+id/backimages"
                    android:gravity="center"
                    android:background="@drawable/activity_backss_view"
                    android:layout_marginLeft="@dimen/twentyDp"
                    android:layout_marginTop="@dimen/twentyDp"
                    android:layout_width="@dimen/thirtyonedp"
                    android:layout_height="@dimen/thirtyonedp">
                    <ImageView

                        android:background="@drawable/back_default"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>
            </RelativeLayout>
            <LinearLayout
                android:weightSum="2"
                android:orientation="vertical"
                android:layout_marginRight="@dimen/tenDp"
                android:layout_marginLeft="@dimen/tenDp"
                android:layout_width="match_parent"
                android:layout_height="197dp">
                <LinearLayout
                    android:layout_marginBottom="@dimen/threeDp"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <ImageView
                        android:id="@+id/productTailorlayout"
                        android:background="@drawable/product_right_view"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_marginRight="@dimen/threeDp"
                        android:layout_height="match_parent" />
                    <ImageView
                        android:id="@+id/healthTailorLayout"
                        android:background="@drawable/health_right_view"
                        android:layout_marginLeft="@dimen/threeDp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/threeDp"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <ImageView
                        android:id="@+id/travelTailorlayout"
                        android:layout_weight="1"
                        android:background="@drawable/travel_right_view"
                        android:layout_width="0dp"
                        android:layout_marginRight="@dimen/threeDp"
                        android:layout_height="match_parent" />
                    <ImageView
                        android:id="@+id/homeTailorLayout"
                        android:background="@drawable/home_tailor"
                        android:layout_marginLeft="@dimen/threeDp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />
                </LinearLayout>


            </LinearLayout>
            <RelativeLayout
                android:layout_marginBottom="55dp"
                android:layout_marginRight="@dimen/tenDp"
                android:layout_marginLeft="@dimen/tenDp"
                android:layout_marginTop="25dp"
                android:background="@drawable/personal_text_back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/personal_title_text"
                    android:layout_marginLeft="@dimen/tenDp"
                    android:layout_marginTop="@dimen/tenDp"
                    android:background="@drawable/right_personal_tailer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <TextView
                    android:id="@+id/personalTailorText"
                    android:textColor="#425262"
                    android:textSize="15sp"
                    android:lineSpacingExtra="13dp"
                    android:text="复华资产秉承“私行服务,不止于金融”的服务理念，依托母公司资源，借助全球金融网络，发挥管理团队强大的资源整合能力，给投资人制定专属服务方案，不仅涵盖产品定制，还可以提供健康定制、旅行定制、家族传承等定制化解决方案，满足客户的个性化需求"
                    android:layout_marginRight="@dimen/tenDp"
                    android:layout_marginLeft="@dimen/tenDp"
                    android:layout_marginBottom="@dimen/thirtyonedp"
                    android:layout_marginTop="@dimen/thirtyonedp"
                    android:layout_below="@id/personal_title_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </LinearLayout>
    </com.fhzc.app.android.android.ui.view.widget.ScrollViewExtend>
        <!--<com.fhzc.app.android.android.ui.view.widget.CommonToolBar-->
        <!--android:id="@+id/Toolbar"-->
        <!--android:visibility="visible"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="50dp"-->
        <!--app:mToolBar_title="私人定制"-->
        <!--app:mToolBar_titleColor="@color/activity_text_color" />-->
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/Toolbar"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageView
            android:id="@+id/imageLayout"
            android:layout_marginLeft="@dimen/twentyDp"
            android:layout_centerVertical="true"
            android:background="@drawable/back_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="私人定制"
            android:textSize="16sp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
</RelativeLayout>